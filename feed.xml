<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ site.author | xml_escape }}</title>
    <description>{% if site.desc %}{{ site.desc | xml_escape }}{% endif %}</description>		
    <link>{{ site.rssLink }}</link>
    <atom:link href="{{ site.baseurl }}/feed.xml" rel="self" type="application/rss+xml" />
      {% for post in site.posts limit:10 %}<item>
        <title>{{ post.title | xml_escape }}</title>
        {% if site.author %}<dc:creator>{{ site.author | xml_escape }}</dc:creator>{% endif %}
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ site.baseurl }}{{ post.url }}</link>
        <description>{{ post.content | xml_escape }}</description>
        <guid isPermaLink="true">{{ site.baseurl }}{{ post.url }}</guid>
      </item>{% endfor %}
  </channel>
</rss>
